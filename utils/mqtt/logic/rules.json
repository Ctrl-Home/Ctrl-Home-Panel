[
  {
    "name": "温度过高开空调制冷",
    "enabled": true,
    "trigger": {
      "topic": "/device/test/sensor123/living_room/status",
      "condition": {
        "data_key": "temp",
        "operator": ">",
        "value": 30
      }
    },
    "action": {
      "type": "device_command",
      "device_id": "ac_livingroom",
      "command": "set_state_temp",
      "params": {
        "state": "cool",
        "target_temp": 25
      }
    }
  },
  {
    "name": "温度合适时关闭空调",
    "enabled": true,
    "trigger": {
      "topic": "/device/test/ac1/living_room/command",
      "condition": {
        "data_key": "temp",
        "operator": "<=",
        "value": 26
      }
    },
    "action": {
      "type": "device_command",
      "device_id": "ac_livingroom",
      "command": "turn_off",
      "params": {}
    }
  },
  {
    "name": "湿度低时发通知(示例)",
    "enabled": false,
    "trigger": {
        "topic": "/device/test/sensor123/living_room/status",
        "condition": {
            "data_key": "humi",
            "operator": "<",
            "value": 40
        }
    },
    "action": {
        "type": "mqtt_publish",
        "topic": "/notification/alert",
        "payload": {
            "message": "湿度过低，请注意！"
        }
    }
  }

]