{
  "temp_sensor_livingroom": {
    "id": "temp_sensor_livingroom",
    "name": "客厅温湿度传感器 (更新测试)",
    "type": "sensor",
    "status_topic": "home/sensors/livingroom/temp",
    "data_fields": {
      "humidity": {
        "name": "湿度",
        "type": "number",
        "unit": "%"
      },
      "temperature": {
        "name": "温度",
        "type": "number",
        "unit": "°C"
      }
    }
  },
  "light_livingroom": {
    "id": "light_livingroom",
    "name": "客厅灯",
    "type": "actuator",
    "status_topic": "home/devices/livingroom/light/status",
    "command_topic": "home/devices/livingroom/light/set",
    "data_fields": {
      "state": {
        "name": "状态",
        "type": "enum",
        "values": [
          "on",
          "off"
        ]
      },
      "brightness": {
        "name": "亮度",
        "type": "number",
        "min": 0,
        "max": 100,
        "unit": "%"
      }
    },
    "commands": {
      "turn_on": {
        "name": "开灯",
        "payload_template": {
          "state": "on"
        }
      },
      "turn_off": {
        "name": "关灯",
        "payload_template": {
          "state": "off"
        }
      },
      "set_brightness": {
        "name": "设置亮度",
        "params": {
          "brightness": {
            "name": "亮度",
            "type": "number",
            "min": 0,
            "max": 100,
            "unit": "%"
          }
        },
        "payload_template": {
          "brightness": "{brightness}"
        }
      }
    }
  },
  "sensor_1744200811018": {
    "name": "1",
    "type": "sensor",
    "status_topic": "1",
    "id": "sensor_1744200811018",
    "data_fields": {
      "temperature": {
        "type": "float",
        "unit": "°C"
      },
      "humidity": {
        "type": "float",
        "unit": "%"
      },
      "light_level": {
        "type": "float",
        "unit": "lux"
      }
    }
  }
}